<h1>Quizzes</h1>

<div>
  <% @quizzes.each do |quiz| %>
    <div>
      <div>
        <strong>Title:</strong>
        <%= quiz.title %>
      </div>

      <div>
        <strong>Details:</strong>
        <%= quiz.description %>
      </div>

      <div>
        <%= link_to "Edit", edit_quiz_path(quiz.id) %>
        <%= link_to "Delete", quiz_path(quiz.id), data: { turbo_method: :delete } %>
        <%= link_to "Start", new_quiz_quiz_answer_path(quiz.id) %>
      </div>
    </div>
  <% end %>
</div>

<p>
  <%= link_to "New quiz", new_quiz_path %>
</p>
