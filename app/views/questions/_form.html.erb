<%= form_for @question do |form| %>
  <% if @question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% @question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :statement, style: "display: block" %>
    <%= form.text_field :statement %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <h3>Alternatives</h3>

  <div id="alternatives">
    <%= form.fields_for :alternatives do |alternative| %>    
      <%= render 'alternative_fields', f: alternative %>
    <% end %>
    <%= link_to_add_association "Add alternative", form, :alternatives %>
  </div>  

  <div>
    <%= form.submit %>
  </div>
<% end %>
